{
  "author": {
    "name": "Petar Gyurov",
    "email": "pgyurov93@gmail.com"
  },
  "name": "megadetector-gui",
  "version": "0.0.1-alpha",
  "description": "Machine learning powered tool for sorting camera trap images",
  "main": "src/index.js",
  "scripts": {
    "start": "set APP_DEV=true && concurrently \"npm:sv-dev\" \"electron-forge start\"",
    "startProd": "set APP_DEV=false && concurrently \"npm:sv-start\" \"electron-forge start\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "sv-build": "rollup -c",
    "sv-dev": "rollup -c -w",
    "sv-start": "sirv public",
    "semantic-build": "npx gulp --gulpfile ./semantic/gulpfile.js build",
    "build": "npm run sv-build && electron-builder"
  },
  "build": {
    "appId": "megadetector-gui",
    "productName": "MegaDetector",
    "copyright": "Copyright Â© 2019 ${author}",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/icon.ico"
    },
    "nsis": {
      "installerIcon": "src/assets/icon.ico",
      "uninstallerIcon": "src/assets/uninstall.ico",
      "uninstallDisplayName": "MegaDetector",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets",
        "filter": [
          "**/*",
          "uninstall.ico"
        ]
      }
    ],
    "extraFiles": [
      "engine/models/*",
      "engine/cli.exe"
    ]
  },
  "keywords": [],
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "megadetector_gui"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "electron-reload": "^1.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^7.0.0",
    "fomantic-ui": "^2.8.7",
    "jquery": "^3.5.1",
    "js-image-zoom": "^0.7.0",
    "page": "^1.11.6",
    "sirv-cli": "^1.0.10"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "electron": "11.0.3",
    "electron-builder": "^22.9.1",
    "rollup": "^2.35.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  }
}
